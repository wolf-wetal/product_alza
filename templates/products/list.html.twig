{% extends 'base.html.twig' %}

{% block content %}
    <div class="container">
        <h1>Продукты</h1>
        <table class="table">
            <thead>
            <tr>
                <th>Изображение</th>
                <th>Наименование</th>
                <th>Цена</th>
                <th>Действия</th>
            </tr>
            </thead>
            <tbody>
            {% for product in products %}
                <tr>
                    <td>
                        <img src="{{ asset('images/products/' ~ product.image) }}" alt="Product Image"
                             class="img-thumbnail product-image-list">
                    </td>
                    <td>{{ product.name }}</td>
                    <td>{{ product.price }}</td>
                    <td>
                        <div class="btn-group">

                            <a href="{{ path('product_show', {'id': product.id}) }}"
                               class="btn btn-primary">Просмотр</a>
                            <span class="mx-2"></span>
                            <a href="{{ path('product_edit', {'id': product.id}) }}" class="btn btn-primary">Редактирование</a>
                            <span class="mx-2"></span>
                            <form method="post" action="{{ path('product_delete', {'id': product.id}) }}"
                                  onsubmit="return confirm('Вы уверены что хотите удалить этот продукт')">
                                <input type="hidden" name="_method" value="POST">
                                <button type="submit" class="btn btn-danger">Удалить</button>
                            </form>
                        </div>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        <a href="{{ path('create_product') }}" class="btn btn-primary">Новый продукт</a>
    </div>
{% endblock %}

